wordpress:
  image: wordpress
  links:
    - wordpress_db:mysql
  ports:
    - 8080:80
  volumes:
    - ./wordpress:/var/www/html
wordpress_db:
  image: mariadb
  environment:
    MYSQL_ROOT_PASSWORD: examplepass
  volumes:
    - ./db_data:/var/lib/mysql
phpmyadmin:
  image: corbinu/docker-phpmyadmin
  links:
    - wordpress_db:mysql
  ports:
    - 8081:80
  environment:
    MYSQL_USERNAME: root
    MYSQL_ROOT_PASSWORD: examplepass
osticket:
  image: campbellsoftwaresolutions/osticket
  links:
    - wordpress_db:mysql
  ports:
    - 8082:80
  environment:
    MYSQL_USER: root
    MYSQL_PASSWORD: examplepass
    MYSQL_DATABASE: osticket
